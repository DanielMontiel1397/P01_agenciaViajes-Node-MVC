extends ./layout/index

block contenido     
   main.container.mt-5 
        h1(class="text-center mt-5")= pagina
            
        blockquote.text-center Lee sobre nuestros clientes y sus experiencias 
        .row.testimoniales
            include ./layout/bloqueTestimoniales

        .row 

            .col-md-12
                h2.d-block.w-100.text-center Agrega un Testimonial
                
                if errores  
                    each error in errores 
                        p(class=`py-0 alert text-center alert-danger text-uppercase col-7 mx-auto`)=error.msg

            .row.justify-content-center.col 
                .col-md-8 
                    form(action="" method="POST") 
                        .form-group     
                            label(for="nombre") Nombre 
                            input(type="text" id="nombre" placeholder="Tú nombre..." name="nombre" class="form-control" value= campos ? campos.nombre : '')
                        .form-group     
                            label(for="email") Email 
                            input(type="email" id="email" placeholder="Tú email..." name="email" class="form-control" value=campos ? campos.email : '')
                        .form-group     
                            label(for="mensaje") Mensaje  
                            textarea#mensaje(name="mensaje" rows="3" placeholder="Tú mensaje..." class="form-control" value=campos ? campos.mensaje : '') 

                        input(type="submit" class="btn btn-success btn-block")
                        